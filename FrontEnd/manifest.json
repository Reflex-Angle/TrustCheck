{
    "manifest_version": 3,
    "name": "Amazon Reviews Fetcher",
    "version": "1.0",
    "permissions": ["activeTab", "scripting","alarms"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "128": "128.png"
    }
}
  